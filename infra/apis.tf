# Bootstrap: cloudresourcemanager must be the first API enabled.
# data.google_project (in secret_manager.tf) depends on it.
# Enable this manually once before first `terraform init`:
#   gcloud services enable cloudresourcemanager.googleapis.com --project=$PROJECT_ID
# After that, Terraform manages it here.

resource "google_project_service" "cloudresourcemanager" {
  service            = "cloudresourcemanager.googleapis.com"
  disable_on_destroy = false
}

